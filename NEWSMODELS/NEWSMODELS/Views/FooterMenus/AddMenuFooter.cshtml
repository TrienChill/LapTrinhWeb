
@{
    ViewBag.Title = "AddMenuFooter";
    Layout = "~/Views/Layout/_LayoutPage.cshtml";
}
<style>
    #Lablel {font-size: 18px;}
    #Pos {font-size: 18px;}
    #UrlLink {font-size: 18px;}
    #ListOut tr td b {font-size: 20px;}
    #ID_MN {font-size: 17px;}
    button {font-size: 17px;text-decoration: none;}
    .link {text-decoration: none;}
    #ID_Parent {font-size: 17px;}
    td {font-size: 20px;}
    h2{ margin:20px;}
    table{margin-left:20px;}
    .note{color:crimson;}
</style>
<h2>AddMenu</h2>
@model NEWSMODELS.Models.Menu_Footer
@using (Html.BeginForm("AddMenuFooter", "FooterMenus"))
{
<table>
    <tr><td>ID Menu :</td><td><b>@Html.TextBox("ID_Footer", (object)ViewBag.idnew)</b></td></tr>
    <tr><td>Title :</td><td><b>@Html.TextBox("TitleFooter")</b></td></tr>
    <tr><td>Link :</td><td><b>@Html.TextBox("Link")</b></td></tr>
    <tr>
        <td>Menu cha:</td>
        <td>@Html.DropDownList("ParentID", new SelectList(ViewBag.parents, "ID_Footer", "TitleFooter", ViewBag.parent), "chọn menu")</td>
    </tr>
    <tr>
        <td></td>
        <b class="note">@Html.Raw(ViewBag.Message)</b>
        <br />
        <td>
            <button type="submit">Thêm menu</button>
        </td>
    </tr>
</table>
}
