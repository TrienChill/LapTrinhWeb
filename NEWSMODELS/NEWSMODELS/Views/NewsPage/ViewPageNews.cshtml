
@{
    ViewBag.Title = "ViewPageNews";
    Layout = "~/Views/Layout/Layout_User.cshtml";
}
<style>
    #key {
        width: 230px;
        height: 30px;
        font-size: 18px;
        margin-left: 170px;
    }

    button {
        width: 60px;
        height: 30px;
    }

    .new {
        padding: 30px;
    }

        .new li {
            list-style: none;
            font-size: 18px;
            padding-bottom: 20px;
            list-style-type: decimal;
            list-style-position: inside;
        }

            .new li a {
                text-decoration: none;
                color: black;
            }
                .new li a:hover{
                    color:red;
                }

                #NewsImg {
                    width: 750px;
                    height: 350px;
                    padding: 20px;
                    margin-top: 40px;
                }

    #title {
        padding: 0 20px;
        font-weight: bold !important;
        font-family: 'Times New Roman';
        font-size: 34px;
        line-height: 1.3;
        text-align: inherit;
    }

    #NewSumary {
        padding: 0 20px;
        font-family: 'Times New Roman';
        font-size: 20px;
    }

        #NewSumary li {
            margin-left: 60px;
        }

    p {
        color: #808080;
        font-size: 20px;
        padding: 20px 20px;
    }

    h2, h3, em {
        margin-left: 20px;
    }

    blockquote {
        margin-left: 60px;
    }

    ol {
        margin-left: 60px;
    }

    form li {
        margin-left: 60px;
    }
</style>
@using NEWSMODELS.Models;
@model PageItem
@using (Html.BeginForm("ViewPageNews", "NewsPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <tr>
        <td>
            <img id="NewsImg" src="~/UploadedFiles/@Html.DisplayFor(Model => Model.Image)" />
        </td>
        <td><p id="title" style="color: red">@Model.Title</p><br /></td>
        <td>
            <a id="NewSumary">
                Người đăng: @Model.UserAdd - Ngày đăng: @Model.CreaDate
                <br />
            </a>
        </td>
        <td>
            <p id="cont">@Html.Raw(Model.Contents)</p>
        </td>
    </tr>

}
@section SecHotNewsBlog {
    <h3 style="color:red">Related Posts:</h3>
    <ul class="new">
        @foreach (PageItem item in ((ViewBag.links) as IEnumerable<PageItem>))
        {
            <li>@Html.ActionLink(@item.Title, "ViewPageNews", "NewsPage", new { id = item.ID_P }, new { @class = "link" })</li>
        }
    </ul>
}
@section SecHotNewsBlog2 {
    <h3 style="color:red">Tin mới cập nhật:</h3>
    <ul class="new">
        @foreach (PageItem item in ((ViewBag.links) as IEnumerable<PageItem>))
        {
            <li>@Html.ActionLink(@item.Title, "ViewPageNews", "NewsPage", new { id = item.ID_P }, new { @class = "link" })</li>
        }
    </ul>
}